{
  "name": "stately-vscode",
  "displayName": "XState VSCode",
  "description": "Intelligent XState tooling for VSCode",
  "preview": true,
  "author": "Matt Pocock",
  "license": "MIT",
  "version": "1.5.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/statelyai/xstate-vscode"
  },
  "bugs": {
    "url": "https://github.com/statelyai/xstate-vscode/issues"
  },
  "keywords": [
    "xstate",
    "vscode",
    "visualize",
    "autocomplete",
    "typescript",
    "javascript"
  ],
  "workspaces": {
    "packages": [
      "client",
      "server",
      "shared"
    ]
  },
  "categories": [
    "Linters",
    "Visualization",
    "Other"
  ],
  "galleryBanner": {
    "color": "#fff"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./client/dist/index.js",
  "publisher": "statelyai",
  "contributes": {
    "commands": [
      {
        "command": "xstate.visualize",
        "title": "Open Inspector",
        "category": "XState"
      },
      {
        "command": "xstate.edit",
        "title": "Open Visual Editor",
        "category": "XState"
      },
      {
        "command": "xstate.sign-out",
        "title": "Sign out of Stately",
        "category": "XState"
      },
      {
        "command": "xstate.sign-in",
        "title": "Sign in to Stately",
        "category": "XState"
      }
    ],
    "configuration": {
      "title": "XState",
      "properties": {
        "xstate.showVisualEditorWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings that prevent you from using the visual editor."
        }
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "prettier --write"
  },
  "scripts": {
    "server": "yarn workspace xstate-vscode-server",
    "client": "yarn workspace xstate-vscode-client",
    "shared": "yarn workspace xstate-vscode-shared",
    "vscode:prepublish": "yarn turbo run build:prod",
    "compile": "yarn turbo run build:dev",
    "prepare": "husky install",
    "postinstall": "preconstruct dev && manypkg check"
  },
  "preconstruct": {
    "packages": [
      "shared"
    ]
  },
  "turbo": {
    "pipeline": {
      "lint": {},
      "test": {},
      "viz:build": {
        "outputs": [
          "scripts/vizWebview.js"
        ]
      },
      "editor:build": {
        "outputs": [
          "scripts/editorWebview.js"
        ]
      },
      "build:dev": {
        "dependsOn": [
          "viz:build",
          "editor:build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "build:prod": {
        "dependsOn": [
          "viz:build",
          "editor:build",
          "^build:prod"
        ],
        "outputs": [
          "dist/**"
        ]
      }
    }
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/parser": "^7.12.11",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/traverse": "^7.12.12",
    "@babel/types": "^7.12.12",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.0",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vercel/ncc": "0.28.4",
    "concurrently": "6.2.0",
    "esbuild": "^0.12.22",
    "eslint": "^7.26.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.3.1",
    "turbo": "^1.0.24",
    "typescript": "^4.3.2",
    "xstate-parser-demo": "0.5.2"
  }
}
